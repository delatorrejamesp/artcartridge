<div id="gallery">
  <%@photos.each do |photo|%>
    <div >
        <%=link_to photo_url(photo), remote: true, data: { target: "preview" }  do%>
        <%=image_tag photo.image.url(:medium) %>
        <div class="caption">
            <%=link_to user_url(photo.user), method: :get do%>
            <%=image_tag photo.user.avatar.url(:thumb), class: "img-circle", size: "30x30"%>
            <%="@#{photo.user.username}"%>
            <%end%>
        </div>
        <%end%>
  </div>
  <%end%>
</div>
