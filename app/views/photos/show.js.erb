
<%= render :partial => 'commontator/threads/show',
           :locals => { :thread => @photo.thread,
                        :user => current_user,
                        :page => @commontator_page,
                        :per_page => @commontator_per_page,
                        :show_all => @show_all } %>

<%= javascript_proc %>
<%if session[:page_type] == 1 %>
  $("#modal_for_professional_preview").find(".modal-body").html("<%=escape_javascript(render(:partial => 'photos/photo_modal')).html_safe %>");
<%else%>
  $("#modal_for_community_preview").find(".modal-body").html("<%=escape_javascript(render(:partial => 'photos/photo_community')).html_safe %>");
<%end%>
