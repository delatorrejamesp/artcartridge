<h3 class="text-center">Upload Photo</h3>
<hr>
<%= form_for @photo, url: photos_path, html: { multipart: true, role: "form", class: "form-horizontal" } do |f| %>
  <%=f.hidden_field :user_id %>
  <div class="form-group">
    <%=f.label :image, class: "col-sm-3"%>
   <div class="col-sm-9"><%= f.file_field :image, class: "form-control"%></div>
 </div>
 <div class="form-group">
   <%=f.label :title, class: "col-sm-3"%>
  <div class="col-sm-9"><%= f.text_field :title, class: "form-control"%></div>
</div>
 <div class="form-group">
  <%=f.label :description, class: "col-sm-12"%>
  <div class="col-sm-12"><%=f.text_area :description, class: "form-control", rows: 5 %></textarea></div>
</div>
<div class="form-group">
  <div class="pull-right">
    <%=f.submit class: "btn btn-primary"%>
  </div>
</div>
<% end %>
