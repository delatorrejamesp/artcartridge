<div class="col-md-12 expandable-image" style="position: relative;margin: 0px !important;padding: 0px !important;" align="center">
      <%=image_tag @photo.image.url(:medium), style: "width:100%; hieght:100%;", class: "expandable-image"%>
      <div class="topright" style="position: absolute; top: 8px; left: 8px;">
        	<button data-for="prof-page" class="btn btn-xs btn-default expand-icon-tool"  data-photo-full="<%=@photo.image.url%>", data-photo-preview="<%=@photo.image.url(:medium)%>"><span class="fa fa-expand"></span></button>
      </div>
      <h3><%=@photo.title%></h3>
      <p><%=@photo.description%></p>
      <div class="social-icons-area row">
        <center><%= social_share_button_tag(@photo.title, :allow_sites => %w(facebook google_plus twitter tumblr)) %></center>
      </div>
</div>
