<%if user.photos.any?%>
<%bg = user.random_picked_photo.image.url%>
<%else%>
<%bg = 'http://lorempixel.com/850/280/nature/4/'%>
<%end%>
<div class="row">
  <div class="col-md-3">
      <div class="" style="background: url(<%=bg%>);background-size:cover;height:200px;">
      </div>
      <div class="block" align="center">
            <div class="avatar" style="margin:-60px 0px 0px 0px"><%=image_tag user.avatar.url(:medium), class: "img-circle", size: "120x120"%></div>
             <div style="position:relative;">
               <div style="position:absolute;bottom:0;padding-bottom:10px; height: 60px;">
                 <h3 style="margin-bottom:0px; margin-top:0px;"><%=user.full_name%></h3>
                 <%if user.address?%>
                     <p>
                         <i class="fa fa-map-marker" aria-hidden="true"></i> <%=user.address%>
                         <i class="fa fa-globe" aria-hidden="true"></i>
                         <%=link_to "#{professional_page_url(user, subdomain: "#{user.slug}")}",  professional_page_url(user, subdomain: "#{user.slug}") %><br>
                         <i class="fa fa-envelope" aria-hidden="true"> <%=user.email%></i>
                     </p>

                 <%end%>
               </div>
             </div>
             <% if user_signed_in? %>
               <div id="follow_user" class="pull-right">
                 <%= render :partial => "shared/follow_user", :locals => {:user => user} %>
               </div>
             <% end %>
      </div>
  </div>
</div>
