<%if user.photos.any?%>
<%bg = user.random_picked_photo.image.url(:medium)%>
<%else%>
<%bg = 'http://lorempixel.com/850/280/nature/4/'%>
<%end%>
<div class="row">
  <div class="col-md-3">
      <div class="" style="background: url(<%=bg%>);background-size:cover;height:100px;">
      </div>
      <div class="block" align="center">
            <div class="avatar" style="margin:-60px 0px 0px 0px"><%=image_tag user.avatar.url(:medium), class: "img-circle", size: "120x120"%></div>
             <div style="position:relative;">
               <div style="position:absolute;bottom:0;padding-bottom:10px; height: 60px;">
                 <% if user_signed_in? %>
                   <div id="follow_user" style="">
                     <%#= render :partial => "shared/follow_user", :locals => {:user => user, btnsize: "btn-xs"} %>
                   </div>
                 <% end %>
                 <br>
               </div>
             </div>
             <h3 style="margin-bottom:0px; margin-top:0px;font-size:15px;"><%=user.full_name%></h3>
              <%=link_to "@#{user.slug}",  community_page_url(subdomain: "#{user.slug}") %><br>
      </div>
  </div>
</div>
